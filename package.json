{
  "name": "families-share-back-end",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./src/index.js",
    "test": "nyc --reporter=lcov --reporter=text-summary mocha --timeout 20000 --exit",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "./node_modules/.bin/eslint src --fix",
    "dev-server": "supervisor src/index.js",
    "dev-client": "npm start --prefix client",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\""
  },
  "engines": {
    "node": "10.14.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "config": "^3.1.0",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "exceljs": "^1.9.1",
    "expo-server-sdk": "^3.3.0",
    "express": "^4.16.4",
    "find-remove": "^1.2.2",
    "fs": "0.0.1-security",
    "google-auth-library": "^2.0.2",
    "googleapis": "^43.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "mongoose": "^5.5.2",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "node-schedule": "^1.3.2",
    "nodemailer": "^4.7.0",
    "objectid": "^3.2.1",
    "path": "^0.12.7",
    "pdfmake": "^0.1.60",
    "sharp": "^0.22.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "concurrently": "^4.1.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently \"npm run lint\"   \"cd client && npm run lint\""
    }
  }
}
